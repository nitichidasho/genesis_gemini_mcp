# Genesis MCP Gemini 環境設定テンプレート
# このファイルを .env にコピーして、実際の値を設定してください
# cp .env.example .env

# =====================================
# 必須設定項目
# =====================================

# Gemini API設定（必須）
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =====================================
# Genesis設定
# =====================================

# バックエンド設定（gpu/cpu）
GENESIS_BACKEND=gpu

# 精度設定（16/32）
GENESIS_PRECISION=32

# デフォルトビューワー表示
GENESIS_VIEWER_DEFAULT=True

# =====================================
# VNC設定
# =====================================

# VNCディスプレイ番号
VNC_DISPLAY=:1

# VNC画面解像度
VNC_GEOMETRY=1024x768

# VNC色深度
VNC_DEPTH=24

# VNCパスワード（セキュリティ重要！）
VNC_PASSWORD=genesis123

# =====================================
# OpenGL設定（VNC/リモート環境用）
# =====================================

MESA_GL_VERSION_OVERRIDE=3.3
MESA_GLSL_VERSION_OVERRIDE=330
LIBGL_ALWAYS_SOFTWARE=1

# =====================================
# シミュレーション設定
# =====================================

# デフォルトシミュレーションステップ数
DEFAULT_SIMULATION_STEPS=100

# 進捗表示間隔
PROGRESS_DISPLAY_INTERVAL=10

# 最大FPS（VNC用）
MAX_FPS_VNC=30

# 最大FPS（GUI用）
MAX_FPS_GUI=60

# =====================================
# MCP設定
# =====================================

MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# =====================================
# デバッグ・開発設定
# =====================================

# デバッグモード
DEBUG_MODE=False

# 詳細ログ出力
VERBOSE_LOGGING=False

# =====================================
# テンプレートライブラリ設定
# =====================================

# テンプレートライブラリを有効化
TEMPLATE_LIBRARY_ENABLED=True

# 最大関連テンプレート数
MAX_RELEVANT_TEMPLATES=3

# =====================================
# GPU・パフォーマンス設定
# =====================================

# 使用するGPUデバイス
CUDA_VISIBLE_DEVICES=0

# GPU メモリ使用率
GPU_MEMORY_FRACTION=0.8

# GPU加速を有効化
ENABLE_GPU_ACCELERATION=True

# 物理計算サブステップ数
PHYSICS_SUBSTEPS=10

# 衝突検出最大ペア数
COLLISION_DETECTION_MAX_PAIRS=2000

# =====================================
# ファイルパス設定
# =====================================

# Genesis アセットパス
GENESIS_ASSETS_PATH=./Genesis/assets

# Genesis サンプルパス
GENESIS_EXAMPLES_PATH=./genesis_reference/examples

# VNC設定ファイルパス
VNC_CONFIG_PATH=~/.genesis_vnc_config.json

# =====================================
# セキュリティ設定
# =====================================

# 外部VNC接続を許可するか
ALLOW_EXTERNAL_VNC_CONNECTIONS=False

# VNCパスワード認証を必須とするか
REQUIRE_VNC_PASSWORD=True

# =====================================
# セットアップ手順
# =====================================
#
# 1. このファイルを .env にコピー:
#    cp .env.example .env
#
# 2. Gemini API キーを取得:
#    https://makersuite.google.com/app/apikey
#
# 3. GEMINI_API_KEY に実際のAPIキーを設定
#
# 4. その他の設定を環境に応じて調整
#
# 5. VNC環境をセットアップ:
#    python start_vnc.py
#
# 6. Genesis Clientを起動:
#    python genesis_client.py --interactive
#
# =====================================